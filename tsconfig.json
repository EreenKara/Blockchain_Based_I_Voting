{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"],
      "@gorhom/bottom-sheet": ["types/bottom-sheet.d.ts"],
      "@react-navigation/native": [
        "node_modules/@react-navigation/native/lib/typescript/src"
      ],
      "@react-navigation/native-stack": [
        "node_modules/@react-navigation/native-stack/lib/typescript/src"
      ],
      "@components/*": ["Components/*"],
      "@screens/*": ["src/screens/*"],
      "@assets/*": ["assets/*"],
      "@services/*": ["src/services/*"],
      "@navigation/*": ["src/navigation/*"],
      "@styles/*": ["styles/*"],
      "@utility/*": ["src/utility/*"],
      "@shared/*": ["src/shared/*"],
      "@entities/*": ["entities/*"],
      "@icomponents/*": ["src/components/*"]
    }
  },
  "include": ["src/**/*", "types/**/*", "**/*.ts", "**/*.tsx", "entities"]
}
